{# Setup variables -#}
{%- if degradation.rate != 0 -%}
    {%- set degrate = ('%.7f' % degradation.rate).rstrip('0').rstrip('.') -%}
{%- else -%}
    {%- set degrate = ' 0.00E+00' -%}
{%- endif -%}
{%- set degtemp = ('%.7f' % degradation.temperature).rstrip('0').rstrip('.') -%}
{%- set relative_degradation_non_equilibrium_sites = ('%.7f' % degradation.relative_degradation_non_equilibrium_sites
                                                     ).rstrip('0').rstrip('.') -%}
{%- set stoichiometric_factor = ('%.7f' % degradation.formation_factor).rstrip('0').rstrip('.') -%}
{# Write line -#}
{{ ' ' }}{{ degrate -}}
{{'   '}}{{ degtemp -}}
{{'          '}}{{ degradation.q10 -}}
{{'        '}}{{ degradation.moisture.absolute -}}
{{'           '}}{{ degradation.moisture.relative -}}
{{'         '}}{{ degradation.moisture.exp -}}
{{'       '}}{{ relative_degradation_non_equilibrium_sites -}}
{{'         '}}{{ stoichiometric_factor -}}
{{'        <'}}{{ degradation.target }}{{'>' -}}
{{'\n' -}}