Universe            = Vanilla
Executable          = pythonwrapper.bat

{% for batch_dir in batches %}
Arguments = {{ batch_dir }} pelmo/runner.py -p {{ batch_dir }} -w {{ batch_dir }}-work -c{% for crop in crops %} {{ crop.name }}{% endfor %} -s{% for scenario in scenarios %} {{ scenario.name }}{% endfor %} --logfile {{batch_dir}}-log.json -o {{ batch_dir }}-output.{{ output_format }}
transfer_input_files = common.zip,{{ batch_dir }}.zip
transfer_output_files = {{ batch_dir }}-output.{{ output_format }},{{ batch_dir}}-log.json
Queue
{% endfor %}