Universe            = Vanilla
Executable          = pythonwrapper.bat

{% for batch_info in batches %}
Arguments = {{ batch_info[0] }} focusStepsPelmo.pelmo.runner -p {{ batch_info[0] }} -w {{ batch_info[0] }}-work -c{% for crop in batch_info[1] %} {{ crop.name }}{% endfor %} -s{% for scenario in batch_info[2] %} {{ scenario.name }}{% endfor %} --logfile {{ batch_info[0] }}-log.json -o {{ batch_info[0] }}-output.json
transfer_input_files = common.zip,{{ batch_dir }}.zip,requirements.txt
transfer_output_files = {{ batch_dir }}-output.json,{{ batch_dir}}-log.json
Queue
{% endfor %}